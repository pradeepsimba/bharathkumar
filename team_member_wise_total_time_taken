<script>
    $(document).ready(function () {
        $('#getdata').click(function () {
            $('#datahidden').show()
            var from_date = $('#from_date').val();
            var to_date = $('#to_date').val();

            console.log(from_date, to_date);
            var formData = new FormData();
            formData.append('picked_date', from_date);
            formData.append('to_date', to_date);

            var url = baseurl + '/User_Wise_Day_Wise_Part_1';
            var autoIncrementId = 1;
            $.ajax({
                url: url,
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,

                success: function (response) {
                    console.log('Request successful');
                    console.log('Response:', response);
                    $('#newtable').empty();
                    var rows = '';
                    $.each(response, function (index, item) {
                        
                        rows += '<tr>';
                        rows += '<td>' + autoIncrementId++ + '</td>';                        
                        rows += '<td>' + (item['member_name'] ? item['member_name'] : '-') + '</td>';
                       
                        rows += '<td>' + (item['chargable_time'] ? item['chargable_time'] : '-') + '</td>';
                        rows += '<td>' + (item['Non_Charchable_time'] ? item['Non_Charchable_time'] : '-') + '</td>';
                        rows += '<td>' + (item['chargable_and_non_chargable'] !== null && item['chargable_and_non_chargable'] !== undefined ? item['second_report_data'] : '-') + '</td>';
                        rows += '<td>' + (item['fourth_report'] ? item['fourth_report'] : '-') + '</td>';
                        rows += '<td>' + (item['fourth_report2'] ? item['fourth_report2'] : '-') + '</td>';
                        rows += '</tr>';
                        
                    });

                    $('#newtable').append(rows);

                    // Destroy existing DataTable instance if it exists
                    if ($.fn.DataTable.isDataTable('#my_table1')) {
                        $('#my_table1').DataTable().destroy();
                    }

                    // Initialize DataTable
                    table = $('#my_table1').DataTable({
                        "pageLength": 5
                    });

                    // Update download button visibility
                    updateDownloadButtonVisibility();
                },
                error: function (xhr, status, error) {
                    // Hide loader
                    $('#loader').hide();

                    console.error('Error:', error);
                }
            });

        });
        
    });
    function updateDownloadButtonVisibility() {
        var tableBody = document.getElementById('newtable');
        var downloadButton = document.getElementById('download-btn');
        if (tableBody.rows.length > 0) {
            downloadButton.style.display = 'block';
        } else {
            downloadButton.style.display = 'none';
        }
    }

    // Call the function to update button visibility after populating the table
    updateDownloadButtonVisibility();
</script>
<script>
    document.getElementById('download-btn').addEventListener('click', function () {
        var table = document.getElementById('my_table1');
        var rows = table.querySelectorAll('tr');
        var csv = [];

        // Loop through rows and build CSV content
        rows.forEach(function (row) {
            var rowData = [];
            var cols = row.querySelectorAll('td, th');

            cols.forEach(function (col) {
                // Enclose each cell value in double quotes to handle commas within values
                rowData.push('"' + col.innerText + '"');
            });

            csv.push(rowData.join(','));
        });

        // Create a Blob from the CSV data
        var csvFile = new Blob([csv.join('\n')], { type: 'text/csv' });

        // Create a link to download the Blob
        var downloadLink = document.createElement('a');
        downloadLink.download = 'Entity_Day_Wise.csv';
        downloadLink.href = window.URL.createObjectURL(csvFile);
        downloadLink.style.display = 'none';

        // Append the link to the body
        document.body.appendChild(downloadLink);

        // Trigger the download
        downloadLink.click();

        // Remove the link from the document
        document.body.removeChild(downloadLink);
    });


</script>
